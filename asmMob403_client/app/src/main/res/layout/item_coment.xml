<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_ucm"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img_slid"/>
    <RelativeLayout
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/avatar_ucm"
        android:background="@drawable/bo_goc"
        android:paddingVertical="5dp"
        android:paddingHorizontal="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ten_ucm"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoàng Vũ"/>
        <TextView
            android:id="@+id/noidung_ucm"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/ten_ucm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Truyện siêu hay luôn mọi người dsadsadsadsadsadsadsadsadsadsadsadasdasdasdsadsadsadasdasdsadasdasdasdasdasdsadasdasdsasadsadsadasdsadsadsadasdsadasdasdasd"/>
        <TextView
            android:id="@+id/time_ucm"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 giờ"/>


        <ImageView
            android:id="@+id/edit_coment"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/edit_cmt" />
    </RelativeLayout>

</RelativeLayout>
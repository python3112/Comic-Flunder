<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitis.Deital_comic_user">



    <ProgressBar
        android:id="@+id/isLoading_deital"
        android:layout_centerInParent="true"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_deital_comic"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@color/lavender"
        app:titleTextColor="@color/white">

        <ImageButton
            android:id="@+id/btn_close_deital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@drawable/img_arrow" />

        <TextView
            android:id="@+id/txt_name_comic_deital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:ellipsize="end"
            android:fontFamily="@font/my_font"
            android:maxLines="1"
            android:text="thần ấn vương tọa 2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp" />


    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/layout_deital"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_deital_comic"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_coverImage"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:background="@drawable/boder_item_comic"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_slid" />

                <Button
                    android:id="@+id/btn_read_comic"
                    android:layout_marginTop="5dp"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/boder_item"
                    android:text="Read Comic" />


<LinearLayout
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:text="Information Comic"
        android:fontFamily="@font/my_font"
        android:layout_marginStart="5dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_author"
                        android:textSize="18dp"
                        android:fontFamily="@font/myfont2"
                        android:text="Author :  đường gia tam thiếu "
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txt_date"
                        android:textSize="18dp"
                        android:fontFamily="@font/myfont2"
                        android:text="Date : đường gia tam thiếu "
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/txt_genres"
                        android:textSize="18dp"
                        android:fontFamily="@font/myfont2"
                        android:text="Genres : Chien dau"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>





                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/txt_des_deital_comic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/myfont2"
                android:text=" dsndsdsadbsabdbasdsadbsadsbadsadsadsadsadasdsadadsadsadsadsadsadsadbasbdaskdbsdansandsansnbdasnd"
                android:textSize="15dp" />




            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Comments"
                    android:fontFamily="@font/my_font"
                    android:layout_marginStart="5dp"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_btn_read"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:background="#8000"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="10dp">

                <EditText
                    android:id="@+id/edt_cmt_deital_comic"
                    android:layout_weight="1"
                    android:background="@drawable/boder_item_comic"
                    android:backgroundTint="@color/white"
                    android:hint="viết bình luận"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/btn_sent_comment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:src="@drawable/sent" />

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_comment_deital_comic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" />


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitis.Deital_comic">


<ImageButton
    android:id="@+id/btn_close"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_deltail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@id/tablayout_deital"
        android:layout_weight="1"/>
 <com.google.android.material.tabs.TabLayout
   android:id="@+id/tablayout_deital"
     app:tabSelectedTextColor="@color/lavender"
     android:layout_alignParentBottom="true"
     app:tabBackground="@drawable/boder_item"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"/>



</RelativeLayout>
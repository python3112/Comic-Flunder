<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/img"
    android:layout_marginTop="20dp"
    android:layout_height="220dp">




<de.hdodenhof.circleimageview.CircleImageView
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
    android:layout_marginStart="15dp"
    android:id="@+id/avata_user"
    android:src="@drawable/img_slid"
    android:layout_width="130dp"
    android:layout_height="120dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/avata_user"
        android:layout_marginStart="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"

        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_fulluser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/my_font"
            android:maxLines="1"
            android:text="dsadsasdadsadsadsa"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/nav_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/my_font"
            android:maxLines="1"
            android:text="hoangvh@gamil.com"
            android:textSize="17dp" />




    </LinearLayout>

    <ProgressBar
        android:id="@+id/loading_nav"
        android:visibility="visible"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>
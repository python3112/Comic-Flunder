<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="130dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/boder_item_comic"
    android:layout_height="150dp">




    <ImageView
        android:src="@drawable/img_slid"
        android:id="@+id/img_comic_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignBottom="@id/img_comic_item"
        android:id="@+id/liner_name_comic"
        android:layout_alignEnd="@id/img_comic_item"
        android:layout_alignStart="@id/img_comic_item"

        android:background="#8000"
        android:gravity="center"

        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/txt_namecomic_item"
            android:text="đấu la đại lục "
            android:textSize="17dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/myfont2"
            android:textColor="@color/white"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/auther_comic_item"
            android:text="dường gia tam thiếu "
            android:textSize="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/myfont2"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</RelativeLayout>
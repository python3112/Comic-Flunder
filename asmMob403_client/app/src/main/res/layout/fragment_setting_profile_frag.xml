<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.setting_profile_frag">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_avata_setting"
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center"
            android:src="@drawable/img_slid" />

        <ImageButton
            android:id="@+id/btn_camera"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@id/user_avata_setting"
            android:layout_alignBottom="@+id/user_avata_setting"
            android:layout_marginEnd="30dp"
            android:contentDescription="TODO"
            android:src="@drawable/camera_user" />


    </RelativeLayout>


    <LinearLayout
        android:layout_below="@id/line1"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_id_user_Setting"
            android:text="userid dsdsadsa"
            android:textSize="20dp"
            android:fontFamily="@font/my_font"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="#005B9A"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:id="@+id/til_username_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_username_setting"
            android:enabled="false"
            android:inputType="text|textNoSuggestions"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:hint="username" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="#005B9A"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:id="@+id/til_fullname_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_fullname_setting"
                android:inputType="text|textNoSuggestions"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="fullname" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="#005B9A"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:id="@+id/til_email_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_email_setting"
                android:inputType="text|textNoSuggestions"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:hint="email" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="#005B9A"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_alignParentTop="true"
            android:id="@+id/til_password_setting"
            app:passwordToggleEnabled="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_password_setting"
                android:inputType="textPassword|textNoSuggestions"
                android:layout_width="match_parent"

                android:layout_height="70dp"
                android:hint="password" />



        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="#005B9A"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            android:layout_marginTop="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            android:layout_alignParentTop="true"
            android:id="@+id/til_repassword_setting"
            app:passwordToggleEnabled="true"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_repassword_setting"
                android:inputType="textPassword|textNoSuggestions"
                android:layout_width="match_parent"

                android:layout_height="70dp"
                android:hint="password" />



        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/btn_update_setting"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/my_font"
            android:text="Update Profile"
            android:textSize="17dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/isLoading_setting"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"/>

</RelativeLayout>


</FrameLayout>